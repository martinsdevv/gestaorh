@page
@model GestaoRH.Web.Pages.Funcionarios.CreateModel
@{
    ViewData["Title"] = "Novo Funcionário";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h3 class="card-title mb-4 fw-bold text-success">
                        <i class="bi bi-person-plus me-2"></i> Novo Funcionário
                    </h3>

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Funcionario.Nome" class="form-label">Nome</label>
                            <input asp-for="Funcionario.Nome" class="form-control" />
                            <span asp-validation-for="Funcionario.Nome" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Funcionario.Email" class="form-label">Email</label>
                            <input asp-for="Funcionario.Email" type="email" class="form-control" />
                            <span asp-validation-for="Funcionario.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Funcionario.CargoId" class="form-label">Cargo</label>
                            <select asp-for="Funcionario.CargoId" class="form-select" asp-items="Model.CargosOptions">
                                <option value="">-- Selecione um Cargo --</option>
                            </select>
                            <span asp-validation-for="Funcionario.CargoId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Funcionario.SalarioAtual" class="form-label">Salário Atual</label>
                            <input asp-for="Funcionario.SalarioAtual" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Funcionario.SalarioAtual" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Funcionario.DataAdmissao" class="form-label">Data de Admissão</label>
                            <input asp-for="Funcionario.DataAdmissao" type="date" class="form-control" />
                            <span asp-validation-for="Funcionario.DataAdmissao" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}
