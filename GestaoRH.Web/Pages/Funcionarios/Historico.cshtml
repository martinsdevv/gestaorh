@page "{id:int}"
@model GestaoRH.Web.Pages.Funcionarios.HistoricoModel
@{
    ViewData["Title"] = "Histórico de Salário";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3 class="card-title mb-4 fw-bold">
                <i class="bi bi-clock-history me-2"></i> Histórico de Salário — @Model.Funcionario.Nome
            </h3>

            @if (Model.Historico.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Data da Alteração</th>
                                <th>Salário</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var h in Model.Historico)
                            {
                                <tr>
                                    <td>@h.DataAlteracao.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@h.Salario.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">Nenhum histórico registrado para este funcionário.</div>
            }

            <div class="mt-3">
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}
