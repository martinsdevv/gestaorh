@page
@model GestaoRH.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">Bem-vindo!</h2>
            <p class="text-muted">Aqui estão os dados mais recentes da gestão de cargos e salários.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-people-fill fs-1 text-primary"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Total de Funcionários</h6>
                        <h4 class="fw-bold mb-0">@Model.TotalFuncionarios</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-briefcase-fill fs-1 text-success"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Total de Cargos</h6>
                        <h4 class="fw-bold mb-0">@Model.TotalCargos</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-currency-dollar fs-1 text-dark"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Média Salarial</h6>
                        <h4 class="fw-bold mb-0">@Model.MediaSalarial.ToString("C")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h4 class="mb-4 fw-semibold">Distribuição Salarial por Cargo</h4>
        <div class="card shadow border-0 p-4">
            <canvas id="graficoSalarios" height="100"></canvas>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('graficoSalarios');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.CargosNomes)),
                datasets: [{
                    label: 'Média Salarial',
                    data: @Html.Raw(Json.Serialize(Model.CargosMedias)),
                    backgroundColor: 'rgba(54, 162, 235, 0.7)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
