@page
@model GestaoRH.Web.Pages.Conta.RegisterModel
@{
    ViewData["Title"] = "Cadastro";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h3 class="card-title mb-4 fw-bold text-success">
                        <i class="bi bi-person-plus me-2"></i> Criar Conta
                    </h3>

                    @if (!string.IsNullOrWhiteSpace(Model.Erro))
                    {
                        <div class="alert alert-danger">@Model.Erro</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Usuario.Nome" class="form-label">Nome</label>
                            <input asp-for="Usuario.Nome" class="form-control" />
                            <span asp-validation-for="Usuario.Nome" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Usuario.Email" class="form-label">Email</label>
                            <input asp-for="Usuario.Email" class="form-control" />
                            <span asp-validation-for="Usuario.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Usuario.Senha" class="form-label">Senha</label>
                            <input asp-for="Usuario.Senha" type="password" class="form-control" />
                            <span asp-validation-for="Usuario.Senha" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Login" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> JÃ¡ tenho conta
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}
